{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@auth/*": ["src/app/common/auth/*"],
      "@diretivas/*": ["src/app/common/diretivas/*"],
      "@models/*": ["src/app/common/models/*"],
      "@pipes/*": ["src/app/common/pipes/*"],
      "@core/*": ["src/app/core/*"],
      "@pages/*": ["src/app/pages/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
